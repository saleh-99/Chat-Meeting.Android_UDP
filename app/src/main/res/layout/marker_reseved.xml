<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/User"
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/image_profile"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />


    <ImageButton
        android:id="@+id/pin_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pin_drop"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/incoming_chat"
        app:layout_constraintLeft_toRightOf="@+id/image_profile"
        app:layout_constraintTop_toBottomOf="@+id/User"
        />

    <TextView
        android:id="@+id/Time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/pin_drop"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/pin_drop" />

</androidx.constraintlayout.widget.ConstraintLayout>